<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path,class: 'btn btn-default' %>
<div class="row">
    <% @articles.each do |article| %>
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <img src="http://www.38throssendalescouts.org.uk/wp-content/uploads/2011/09/Diana_in_Spain.jpg" alt="...">
        <div class="caption">
          <h3><%= article.title %></h3>
          <p><%= article.text[0,10] %></p>
          <p>
          <%= link_to 'Show', article_path(article), class: 'btn btn-primary'%>
          <%= link_to 'Edit', edit_article_path(article) , class: 'btn btn-default'%>
          <%= link_to 'Destroy', article_path(article), class: 'btn btn-danger',
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
      <!--     <a href="#" class="btn btn-primary" role="button">Button</a> 
          <a href="#" class="btn btn-default" role="button">Button</a></p> -->
        </div>
      </div>
    </div>
  <% end %>
</div>